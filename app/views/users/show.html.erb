<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Users Profile</h1>
      <h2><%= @user.name %></h2>
      <p>this is a nice profile</p>
      <hr>
    </div>
    <div class="col-sm-12 col-md-6">

      <h3>Events created</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <% @user.events.each do |event| %>
            <tr>
              <td><%= event.id %></td>
              <td><%= event.name %></td>
            </tr>
          <% end  %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">

      <h3>Events Attending</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <% @user.attended_events.each do |event| %>
            <tr>
              <td><%= event.id %></td>
              <td><%= event.name %></td>
            </tr>
          <% end  %>
        </tbody>
      </table>
    </div>
  </div>
</div>