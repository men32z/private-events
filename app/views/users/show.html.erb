<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Users Profile</h1>
      <h2><%= @user.name %></h2>
      <p>this is a nice profile</p>
      <hr>
    </div>
    <div class="col-sm-12 col-md-6">

      <h3>Events created</h3>
      <br>
      <h4>Upcoming Events</h4>
      <table class="table table-striped table-hover">

        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <%= render @created_upcoming_events %>
        </tbody>
      </table>

      <h4>Previous Events</h4>
      <table class="table table-striped table-hover">

        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <%= render @created_past_events %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">

      <h3>Events Attending</h3>
      <br>
      <h4>Upcoming Events</h4>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <%= render @attended_upcoming_events %>
        </tbody>
      </table>

      <h4>Previous Events</h4>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <%= render @attended_past_events %>
        </tbody>
      </table>
    </div>
  </div>
</div>