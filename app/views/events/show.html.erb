<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Event description</h1>
      <p>
        <b>Creator:</b><%= @event.creator.name %><br>
        <b>Name of Event:</b><%= @event.name%><br>
        <b>Description:</b><%= @event.description %><br>
      </p>
      <hr>
    </div>
    <div class="col-sm-12 col-md-6">

      <h3>Event's Attendees</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          <% @event.attendees.each do |attendee| %>
            <tr>
              <td><%= attendee.id %></td>
              <td><%= attendee.name %></td>
            </tr>
          <% end  %>
        </tbody>
      </table>
    </div>
  </div>
</div>
